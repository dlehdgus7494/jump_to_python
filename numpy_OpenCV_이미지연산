      "cell_type": "code",
      "source": [
        "import cv2\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "image = cv2.imread('cat.jpg.png')\n",
        "\n",
        "roi = image[100:150, 100:150]\n",
        "\n",
        "# ROI 단위로 이미지 복사하기\n",
        "image[0:100, 0:100] = roi\n",
        "\n",
        "plt.imshow(cv2.cvtColor(image, cv2.COLOR_BGR2RGB))\n",
        "plt.show()"
      ],
